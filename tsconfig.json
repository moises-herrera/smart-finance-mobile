{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["./src/*"]
    },
    "noEmit": false,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["build", "node_modules"]
}
